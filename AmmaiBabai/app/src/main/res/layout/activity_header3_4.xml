<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_fade"
    android:orientation="vertical"
    tools:context="ammaibabai.universl.com.ammaibabai.header_3.Header3_4Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textHeader"
                android:layout_height="50dp"
                android:text="@string/heade3_4"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtClose"
                android:layout_marginStart="22dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtClose"
                android:background="@drawable/backing"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <TextView
                android:layout_marginTop="5dp"
                style="@style/btn_style"
                android:text="@string/para3_4_1"/>
            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_4_2"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/mucusshort"
                />


            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_4_3"/>
            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_4_4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_toLeftOf="@+id/nextButton"
                    android:layout_toStartOf="@+id/nextButton"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_previous" />

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/previousButton"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_next" />
            </RelativeLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>



</LinearLayout>
