<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/blue_fade"
    tools:context="ammaibabai.universl.com.ammaibabai.header_3.Header3_13Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textHeader"
                android:layout_height="50dp"
                android:text="@string/heade3_13"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtClose"
                android:layout_marginStart="22dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtClose"
                android:background="@drawable/backing"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <TextView
                android:layout_marginTop="5dp"
                style="@style/btn_style"
                android:text="@string/para3_13_1"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_2"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/dum"
                />

            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_13_3"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_4"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:background="@drawable/soother"
                />
            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_13_5"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_6"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_7"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_8"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:src="@drawable/sleeping_position"

                />

            <TextView
                android:layout_marginTop="10dp"
                style="@style/btn_style"
                android:text="@string/para3_13_9"/>
            <TextView
                android:layout_marginTop="3dp"
                style="@style/btn_style"
                android:text="@string/para3_13_10"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_previous" />

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>



</LinearLayout>
