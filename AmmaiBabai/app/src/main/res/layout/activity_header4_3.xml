<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_fade"
    android:orientation="vertical"
    tools:context="ammaibabai.universl.com.ammaibabai.header_4.Header4_3Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textHeader"
                android:layout_height="50dp"
                android:text="@string/head4_3"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txtClose"
                android:layout_marginStart="22dp" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/txtClose"
                android:background="@drawable/backing"
                android:textColor="@color/colorWhite"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="5dp"
                android:text="@string/head4_3_1" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_2" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_3" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_4" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/four_four_one" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_5" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_6" />

            <TextView
                style="@style/btn_style"
                android:layout_marginTop="10dp"
                android:text="@string/head4_3_7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_previous" />

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_small"
                    android:src="@drawable/ic_next" />
            </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>


</LinearLayout>
